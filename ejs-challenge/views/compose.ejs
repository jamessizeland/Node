<%- include("partials/header") %> 

<h1>Compose</h1>

<!-- TODO add bootstrap to this form -->
<form action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input type="text" class="form-control" name="blogTitle" autocomplete="off">
    </div>
    <div class="form-group">
        <label for="postBody">Post</label>
        <textarea name="blogBody" rows="10" class="form-control"></textarea>
    </div>
    <button class="btn btn-primary" type="submit" name="submitter" value="publisher" >Publish</button>
</form>

